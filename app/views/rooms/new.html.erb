<h1>Creating Room</h1>
<%= simple_form_for @room, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class='form-inputs'>
      <%= f.input :name %>
      <%= f.input :avatar, as: :file %>
      <%= f.input :private, as: :boolean %>
    </div>
    <div class='form-actions'>
      <%= f.submit 'Create', class: 'btn btn-success' %>
      <%= link_to 'Cancel', rooms_path, class: 'btn btn-inverse' %>
    </div>
<% end %>
